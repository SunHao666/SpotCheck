<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.spotcheck">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network"
        android:name=".moudle.MApplication"
        android:theme="@style/AppTheme">
        <activity android:name=".moudle.MainActivity" android:screenOrientation="portrait">

        </activity>
        <activity android:name=".moudle.scancheck.ScanCheckActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.scancheck.scanresult.ScanCheckResultActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.scancheck.checkexception.CheckExceptionActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.patralcheck.PatralCheckActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.scanlub.ScanLubActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.login.LoginActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.king.zxing.CaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CaptureTheme"/>
        <activity android:name=".moudle.search.SearchActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.device.deviceinfo.DeviceInfoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.device.devicesave.DeviceInfoSaveActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.voice.VoiceActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.report.ReportRepairActivity" android:screenOrientation="portrait"/>
        <activity android:name=".moudle.repair.detail1.RepairDetail1Activity" />
        <activity android:name=".moudle.repair.detail2.RepairDetail2Activity" />
        <activity android:name=".moudle.repair.detail3.RepairDetail3Activity" />
        <activity android:name=".moudle.repair.detail4.RepairDetail4Activity" />
        <activity android:name=".moudle.repair.detail5.RepairDetail5Activity" />
    </application>

</manifest>