<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_8"
    android:background="@drawable/shape_home_wait_generate_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/warning"
        android:drawablePadding="@dimen/dp_8"
        android:text="维修提醒"
        android:textColor="#E70308"
        android:textSize="@dimen/sp_16" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:id="@+id/mWarning1Num"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_59"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_home_wait_generate_item1"
            android:gravity="center"
            android:text="30\n未审核"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/mWarning2Num"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mWarning2Num"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_59"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_home_wait_generate_item2"
            android:gravity="center"
            android:text="10\n未审核"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toRightOf="@id/mWarning1Num"
            app:layout_constraintRight_toLeftOf="@id/mWarning3Num"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mWarning3Num"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_59"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_home_wait_generate_item3"
            android:gravity="center"
            android:text="30\n未审核"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toRightOf="@id/mWarning2Num"
            app:layout_constraintRight_toLeftOf="@id/mWarning4Num"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mWarning4Num"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_59"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_home_wait_generate_item4"
            android:gravity="center"
            android:text="30\n未审核"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toRightOf="@id/mWarning3Num"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>