<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/personSelLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_blue_five"
        android:padding="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/lay2">

        <TextView
            android:id="@+id/mPersonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员"
            android:textColor="#727272"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mPersonSelTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrpw_right"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right"
            android:hint="请选择"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/mPersonText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="XXX" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_blue_five"
        android:padding="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceLay">

        <TextView
            android:id="@+id/mCompanyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定额工时"
            android:textColor="#727272"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/mFixedTimeEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="请输入"
            android:background="@null"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_14"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@id/mCompanyText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_blue_five"
        android:padding="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceLay">

        <TextView
            android:id="@+id/mTendsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实动工时"
            android:textColor="#727272"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/mTrendsTimeEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="请输入"
            android:background="@null"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_14"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@id/mTendsText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/mSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/login_btn_bg"
        android:text="确定提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopTimeLay" />

</LinearLayout>