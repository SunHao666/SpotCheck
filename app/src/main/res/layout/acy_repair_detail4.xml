<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/common_repair_detail" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/overTimeLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_blue_five"
            android:padding="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintRight_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/lay2">

            <TextView
                android:id="@+id/mCompanyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成时间"
                android:textColor="#727272"
                android:textSize="@dimen/sp_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mOverTimeTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrpw_right"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="right"
                android:hint="请选择"
                android:textColor="#1F1F1F"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@id/mCompanyText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="XXX" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/mSureOverBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/login_btn_bg"
            android:text="确认完工"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintRight_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/mExceptionInfoEt" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>