<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设备名称"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_devs_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="111"
                android:textSize="@dimen/sp_14"
                android:textColor="#1F1F1F"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="#E0E0E0"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="部位"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_devs_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="111"
                android:textSize="@dimen/sp_14"
                android:textColor="#1F1F1F"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="#E0E0E0"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="发现问题时间"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_devs_find_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="111"
                android:textSize="@dimen/sp_14"
                android:textColor="#1F1F1F"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="#E0E0E0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="发现问题类型"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_devs_find_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="111"
                android:textSize="@dimen/sp_14"
                android:textColor="#1F1F1F"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="#E0E0E0"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="项目"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_devs_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="111"
                android:textSize="@dimen/sp_14"
                android:textColor="#1F1F1F"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="#E0E0E0"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="问题描述"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_devs_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="111"
                android:textSize="@dimen/sp_14"
                android:textColor="#1F1F1F"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="#E0E0E0"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_blue_five"
            >
            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修时间"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:lines="1"
                />
            <TextView
                android:id="@+id/et_work_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/name1"
                android:layout_marginLeft="@dimen/dp_5"
                android:lines="1"
                android:padding="@dimen/dp_9"
                android:hint="请输入"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_blue_five"
            android:layout_marginTop="@dimen/dp_9"
            >
            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修工时"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:lines="1"
                />
            <EditText
                android:id="@+id/et_dev_work_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/name2"
                android:layout_marginLeft="@dimen/dp_5"
                android:inputType="number"
                android:lines="1"
                android:padding="@dimen/dp_9"
                android:hint="请输入"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修内容"
            android:textSize="@dimen/sp_14"
            android:textColor="#515151"
            android:layout_centerVertical="true"
            android:lines="1"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_9"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_95"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/shape_blue_five"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_devs_repair_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:padding="@dimen/dp_9"
                    android:hint="请输入"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#515151"/>
            </LinearLayout>


        <Button
            android:id="@+id/btn_devs_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_bg"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_25"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>
</ScrollView>