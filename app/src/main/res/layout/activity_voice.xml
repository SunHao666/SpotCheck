<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#e4e4e4"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/colorAccent"
        >


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-20dp"
        android:background="@drawable/shape_white_five"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        >
        <View
            android:id="@+id/linexu"
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layerType="software"
            android:background="@drawable/shpe_line_xu"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_65"
            />
        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/linexu"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_65"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="top"
            tools:text="12312331323142erwerwrwrw"
            android:textSize="@dimen/sp_20"
            android:background="@null"
            />
        <Button
            android:id="@+id/btn_start"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="开始"
            android:textColor="@color/white"
            android:background="@drawable/voice_btn_bg"
            android:layout_margin="@dimen/dp_10"
            />

        <Button
            android:id="@+id/btn_over"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:textColor="@color/white"
            android:background="@drawable/voice_btn_bg"
            android:layout_margin="@dimen/dp_10"
            />
    </RelativeLayout>

</LinearLayout>