<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="@dimen/dp_15"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lay_check_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/home_top_shape"
        android:padding="@dimen/dp_1"

        >

        <LinearLayout
            android:id="@+id/lay_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/home_top_shape1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_13"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#1F1F1F"
                android:textSize="@dimen/sp_19" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_gravity="center_vertical"
                >
            <TextView
                android:id="@+id/tv_checked_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:textColor="#515151"
                android:textSize="@dimen/sp_12" />
                <LinearLayout
                    android:id="@+id/lay_uncheck_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待点检项目 "
                        android:textColor="#1F1F1F"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:id="@+id/tv_uncheck_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19"
                        android:textColor="#E80238"
                        android:textSize="@dimen/sp_16" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 项"
                        android:textColor="#1F1F1F"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_check"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_check_place"
                android:textColor="#515151"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_check_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1F1F1F"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_check_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_space"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_check_plan"
                android:textColor="#515151"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1F1F1F"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>