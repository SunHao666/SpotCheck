<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
   android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        >

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:text="设备信息选择"
            />

        <ImageView
            android:id="@+id/closeIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/report_close"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_17"/>
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_1"
       android:background="#E3E3E3"
       android:layout_marginTop="@dimen/dp_10"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_search_bg"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/searchTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textSize="@dimen/sp_15"
            android:textColor="#3489DA"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            />
        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/report_search"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/serarchEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_toRightOf="@id/ivSearch"
            android:layout_toLeftOf="@id/searchTv"
            android:hint="查找设备名称"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_10"
            />

    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/mSearchList"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_350"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:childDivider="#c8c7cc"
        android:divider="@null"
        android:dividerHeight="1px"
        android:groupIndicator="@null"
        android:listSelector="#00000000"
        android:scrollbars="none" />


</LinearLayout>