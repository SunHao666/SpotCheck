<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_114"
        android:background="#3489DA"
        >
        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_person"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_person"
            android:layout_centerVertical="true"
            >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lining"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            />

        <TextView
            android:id="@+id/tv_login_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录时间：2019.10.08"
            android:textColor="#CADCF6"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_13"
            />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6EBFD"
        android:layout_marginTop="@dimen/dp_14"
        android:text="一月内完成的点检工作"
        android:textSize="@dimen/sp_15"
        android:textColor="#073156"
        android:drawableLeft="@drawable/ic_tab_category_f"
        android:padding="@dimen/dp_15"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_month_check"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6EBFD"
        android:layout_marginTop="@dimen/dp_14"
        android:text="一月内完成的润滑工作"
        android:textSize="@dimen/sp_15"
        android:textColor="#F3EBCB"
        android:drawableLeft="@drawable/ic_tab_cart_f"
        android:padding="@dimen/dp_15"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_month_lub"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>