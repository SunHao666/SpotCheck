<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/common_repair_detail" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stopTimeLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_blue_five"
            android:padding="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintRight_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/lay2">

            <TextView
                android:id="@+id/mCompanyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停机时长"
                android:textColor="#727272"
                android:textSize="@dimen/sp_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/mStopTimeTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="请输入停机时长"
                android:background="@null"
                android:textColor="#1F1F1F"
                android:textSize="@dimen/sp_14"
                android:maxLength="10"
                android:maxLines="1"
                android:inputType="numberDecimal"
                app:layout_constraintLeft_toRightOf="@id/mCompanyText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="XXX" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/mExceptionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_30"
            android:text="维修内容"
            android:textColor="#727272"
            android:textSize="@dimen/sp_13"
            />
        <EditText
            android:id="@+id/mRepairContentEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_95"
            android:gravity="top"
            android:padding="@dimen/dp_9"
            android:hint="请输入"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_blue_five"
            android:textSize="@dimen/sp_14"
            android:textColor="#515151"/>
        <include layout="@layout/add_device_man"
            />
        <Button
            android:id="@+id/mRepairOverBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/login_btn_bg"
            android:text="维修完成提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintRight_toRightOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/mExceptionInfoEt" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>