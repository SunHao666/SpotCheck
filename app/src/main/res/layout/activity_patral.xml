<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_17"
                android:paddingRight="@dimen/dp_30"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现场拍照"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#368ADC"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginBottom="@dimen/dp_18"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_take_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备名称:"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#515151"
                        />
                    <TextView
                        android:id="@+id/tv_set_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1F1F1F"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点检部位:"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#515151"
                        />
                    <TextView
                        android:id="@+id/tv_set_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1F1F1F"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"
                android:background="#EFF1F4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="现场问题"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:background="#5099F8"
                android:paddingLeft="@dimen/dp_30"
                android:gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/shape_blue_five"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#515151"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    />
                <EditText
                    android:id="@+id/et_proinfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_9"
                    android:hint="请输入"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#515151"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay_pro_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/shape_blue_five"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pro_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="问题类型"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#515151"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_down"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现场描述"
                android:textSize="@dimen/sp_14"
                android:textColor="#515151"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_9"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_95"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/shape_blue_five"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:padding="@dimen/dp_9"
                    android:hint="请输入"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#515151"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_ex_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_bg"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_25"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>