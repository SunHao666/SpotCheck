<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_8"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_17"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/home_ver_shape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="设备检查"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mDayCheck"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="日检"
            android:textSize="@dimen/sp_13"
            android:textColor="#1F1F1F"
            android:drawableTop="@drawable/rijian"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/mWeekCheck"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="周检"
            android:textSize="@dimen/sp_13"
            android:textColor="#1F1F1F"
            android:drawableTop="@drawable/zhoujian"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/mMonthCheck"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="月检"
            android:textSize="@dimen/sp_13"
            android:textColor="#1F1F1F"
            android:drawableTop="@drawable/yuejian"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/mSpecialCheck"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="专检"
            android:textSize="@dimen/sp_13"
            android:textColor="#1F1F1F"
            android:drawableTop="@drawable/zhuanjian"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
</LinearLayout>