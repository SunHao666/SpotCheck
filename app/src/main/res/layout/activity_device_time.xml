<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/deviceLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_blue_five"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/mDeviceNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/typeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:text="类型"
            android:textColor="#727272"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="@+id/mDeviceNameTv"
            app:layout_constraintTop_toBottomOf="@+id/mDeviceNameTv" />

        <TextView
            android:id="@+id/typeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:text="型号"
            android:textColor="#727272"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toBottomOf="@+id/mDeviceNameTv" />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:text="厂家"
            android:textColor="#727272"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="@+id/mDeviceNameTv"
            app:layout_constraintTop_toBottomOf="@+id/typeText" />

        <TextView
            android:id="@+id/typeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_9"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toEndOf="@+id/typeText"
            app:layout_constraintTop_toTopOf="@+id/typeText"
            app:layout_constraintBottom_toBottomOf="@id/typeText"/>

        <TextView
            android:id="@+id/typeNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_9"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toEndOf="@+id/typeNum"
            app:layout_constraintBottom_toBottomOf="@id/typeNum"
            app:layout_constraintTop_toTopOf="@+id/typeNum" />

        <TextView
            android:id="@+id/companyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_9"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@id/company"
            app:layout_constraintStart_toEndOf="@+id/typeText"
            app:layout_constraintTop_toTopOf="@+id/company" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stopTimeLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_blue_five"
        android:padding="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceLay">

        <TextView
            android:id="@+id/mCompanyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="#727272"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/mNumEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="请输入数量"
            android:background="@null"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_14"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@id/mCompanyText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/mSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/login_btn_bg"
        android:text="确定提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopTimeLay" />

</androidx.constraintlayout.widget.ConstraintLayout>