<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="设备编号："
            android:textSize="@dimen/sp_14"
            android:textColor="#515151"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/tv_devinfo_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            tools:text="5004"
            android:textSize="@dimen/sp_14"
            android:textColor="#1F1F1F"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="设备名称："
            android:textSize="@dimen/sp_14"
            android:textColor="#515151"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/tv_devinfo_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            tools:text="1#堆取料机"
            android:textSize="@dimen/sp_14"
            android:textColor="#1F1F1F"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="停机时间："
            android:textSize="@dimen/sp_14"
            android:textColor="#515151"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/tv_devinfo_stop_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            tools:text="2020/12/12"
            android:textSize="@dimen/sp_14"
            android:textColor="#1F1F1F"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_14"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="重新运行时间："
            android:textSize="@dimen/sp_14"
            android:textColor="#515151"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/tv_devinfo_respect_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            tools:text="2020/12/12"
            android:textSize="@dimen/sp_14"
            android:textColor="#1F1F1F"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_device_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFF1F4"
        tools:listitem="@layout/item_device_info"
        tools:itemCount="2"
        />
</LinearLayout>